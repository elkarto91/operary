{
  "info": {
    "name": "Operary API v0.1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8080/v1/health" }
      }
    },
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "header": [{ "key": "X-Org-Token", "value": "demo-org-token" }],
        "url": { "raw": "http://localhost:8080/v1/tasks" }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-Org-Token", "value": "demo-org-token" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Check coolant level\",\n  \"assigned_to\": \"operator-101\",\n  \"user_id\": \"lead-ops-1\"\n}"
        },
        "url": { "raw": "http://localhost:8080/v1/tasks" }
      }
    },
    {
      "name": "Start Shift",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-Org-Token", "value": "demo-org-token" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"supervisor_id\": \"sup-01\",\n  \"user_id\": \"sup-01\"\n}"
        },
        "url": { "raw": "http://localhost:8080/v1/shifts" }
      }
    },
    {
      "name": "Close Shift",
      "request": {
        "method": "POST",
        "header": [{ "key": "X-Org-Token", "value": "demo-org-token" }],
        "url": { "raw": "http://localhost:8080/v1/shifts/{{shift_id}}/close?user_id=sup-01" }
      }
    },
    {
      "name": "Get Audit Logs",
      "request": {
        "method": "GET",
        "header": [{ "key": "X-Org-Token", "value": "demo-org-token" }],
        "url": { "raw": "http://localhost:8080/v1/audit?entity_type=task" }
      }
    },
    {
      "name": "Metrics",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8080/v1/metrics" }
      }
    }
  ]
}